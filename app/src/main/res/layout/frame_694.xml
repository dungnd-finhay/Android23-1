<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5">

    <TextView
        android:id="@+id/text_1"
        android:layout_width="206dp"
        android:layout_height="156dp"
        android:layout_weight="1"
        android:background="#C4C4C4"
        android:gravity="center"
        android:text="1"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_2"
        android:layout_width="206dp"
        android:layout_height="156dp"
        android:layout_alignParentRight="true"
        android:layout_weight="1"
        android:background="#813434"
        android:gravity="center"
        android:text="2"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_3"
        android:layout_width="105dp"
        android:layout_height="157dp"
        android:layout_below="@id/text_1"
        android:layout_centerInParent="true"
        android:background="#260D0D"
        android:gravity="center"
        android:text="3"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_4"
        android:layout_width="153dp"
        android:layout_height="156dp"
        android:layout_below="@id/text_3"
        android:layout_toLeftOf="@id/text_3"
        android:layout_weight="1"
        android:background="#9DC8C0"
        android:gravity="center"
        android:text="4"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_5"
        android:layout_width="258dp"
        android:layout_height="69dp"
        android:layout_below="@id/text_3"
        android:layout_toRightOf="@id/text_4"
        android:layout_weight="1"
        android:background="#531F1F"
        android:gravity="center"
        android:text="5"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_6"
        android:layout_width="258dp"
        android:layout_height="262dp"
        android:layout_below="@id/text_4"
        android:layout_toRightOf="@id/text_4"
        android:layout_weight="1"
        android:background="#C4C4C4"
        android:gravity="center"
        android:text="6"
        android:textSize="30dp"
        android:textStyle="bold" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E5E5E5"
        tools:layout_editor_absoluteX="-61dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/text_1"
        android:layout_width="210dp"
        android:layout_height="137dp"
        android:background="#C4C4C4"
        android:text="1"
        android:layout_marginTop="88dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"

        app:layout_constraintRight_toLeftOf="@id/g1" />

    <TextView
        android:id="@+id/text_2"
        android:layout_width="206dp"
        android:layout_height="137dp"
        android:background="#813434"
        android:text="2"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/g1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_3"
        android:layout_width="97dp"
        android:layout_height="169dp"
        android:background="#260D0D"
        android:text="3"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/g2"
        app:layout_constraintTop_toBottomOf="@id/text_1" />

    <TextView
        android:id="@+id/text_4"
        android:layout_width="166dp"
        android:layout_height="172dp"
        android:background="#9DC8C0"
        android:text="4"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@id/g2"
        app:layout_constraintTop_toBottomOf="@id/text_3" />

    <TextView
        android:id="@+id/text_5"
        android:layout_width="251dp"
        android:layout_height="77dp"
        android:background="#531F1F"
        android:text="5"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/g2"
        app:layout_constraintTop_toBottomOf="@id/text_3" />

    <TextView
        android:id="@+id/text_6"
        android:layout_width="245dp"
        android:layout_height="183dp"
        android:background="#C4C4C4"
        android:text="6"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/g2"
        app:layout_constraintTop_toBottomOf="@id/text_4" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

</androidx.constraintlayout.widget.ConstraintLayout>

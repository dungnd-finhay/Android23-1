<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a6dfdfdf"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_1"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:layout_weight="1"
            android:background="#C4C4C4"
            android:gravity="center"
            android:text="1"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_2"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:layout_weight="1"
            android:background="#813434"
            android:gravity="center"
            android:text="2"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/text_3"
            android:layout_width="0dp"
            android:layout_height="165dp"
            android:layout_weight="1"
            android:background="#54C5B0"
            android:gravity="center"
            android:text="3"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_4"
            android:layout_width="0dp"
            android:layout_height="165dp"
            android:layout_weight="1"
            android:background="#260D0D"
            android:gravity="center"
            android:text="4"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_5"
            android:layout_width="0dp"
            android:layout_height="165dp"
            android:layout_weight="1"
            android:background="#EF7F7F"
            android:gravity="center"
            android:text="5"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_6"
            android:layout_width="0dp"
            android:layout_height="165dp"
            android:layout_weight="1"
            android:background="#516561"
            android:gravity="center"
            android:text="6"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#9DC8C0"
            android:gravity="center"
            android:text="7"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#531F1F"
                android:gravity="center"
                android:text="8"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#C4C4C4"
                android:gravity="center"
                android:text="9"
                android:textSize="30dp"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>



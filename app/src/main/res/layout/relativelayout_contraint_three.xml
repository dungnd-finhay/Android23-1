            android:layout_marginTop="152dp"
            android:background="#260D0D" />

        <View
            android:id="@+id/vBon"
            android:layout_width="130dp"
            android:layout_height="165dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="319dp"
            android:background="#9DC8C0" />

        <View
            android:id="@+id/vNam"
            android:layout_width="247dp"
            android:layout_height="83dp"
            android:layout_below="@+id/vBa"
            android:layout_toRightOf="@id/vBon"
            android:background="#531F1F" />

        <View
            android:id="@+id/vSau"
            android:layout_width="187dp"
            android:layout_height="156dp"
            android:layout_below="@id/vBon"
            android:layout_toRightOf="@id/vBon"
            android:background="#C4C4C4" />

        <TextView
            android:id="@+id/txtSo1"
            android:layout_width="17dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="87dp"
            android:layout_marginTop="56dp"
            android:text="1"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtSo2"
            android:layout_width="17dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="274dp"
            android:layout_marginTop="58dp"
            android:text="2"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtSo3"
            android:layout_width="17dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="172dp"
            android:layout_marginTop="224dp"
            android:text="3"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtSo4"
            android:layout_width="17dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="411dp"
            android:text="4"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtSo5"
            android:layout_width="17dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="249dp"
            android:layout_marginTop="342dp"
            android:text="5"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtSo6"
            android:layout_width="17dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="221dp"
            android:layout_marginTop="547dp"
            android:text="6"
            android:textColor="#000000"
            android:textSize="30sp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".btvnbuoi3.ManOneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Đăng ký tài khoản"
            android:textSize="30sp" />

<!--        digits nghĩa là chỉ cho phép người dùng nhập những ký tự như này-->
        <EditText
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:inputType="text"
            android:layout_marginEnd="16dp"
            android:background="@drawable/shape_editext"
            android:hint="Tên tài khoản"
            android:padding="12dp"
            android:textColor="#333333"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/shape_editext"
            android:hint="Nhập mật khẩu"
            android:padding="12dp"
            android:inputType="textPassword"
            android:textColor="#333333"
            android:textSize="18sp" />

        <EditText
            android:inputType="textPassword"
            android:id="@+id/edtPassAgain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/shape_editext"
            android:hint="Nhập lại mật khẩu"
            android:padding="12dp"
            android:textColor="#333333"
            android:textSize="18sp" />

        <EditText
            android:inputType="textEmailSubject"
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/shape_editext"
            android:hint="Nhập email"
            android:padding="12dp"
            android:textColor="#333333"
            android:textSize="18sp" />

        <EditText
            android:digits="0123456789"
            android:inputType="phone"
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/shape_editext"
            android:hint="Nhập Phone"
            android:padding="12dp"
            android:textColor="#333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvError"
            android:textColor="#E40000"
            android:layout_marginStart="16dp"
            tools:text="Mật khẩu không trùng khớp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/shape_editext"
            android:backgroundTint="#1F9FFC"
            android:gravity="center"
            android:padding="12dp"
            android:text="Tiếp tục"
            android:textColor="@color/white" />
    </LinearLayout>

</FrameLayout>
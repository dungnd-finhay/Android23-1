<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E5E5E5"
        tools:layout_editor_absoluteX="-61dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/text_1"
        android:layout_width="207dp"
        android:layout_height="137dp"
        android:background="#C4C4C4"
        android:text="1"
        android:layout_marginTop="88dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"

        app:layout_constraintRight_toLeftOf="@id/g1" />

    <TextView
        android:id="@+id/text_2"
        android:layout_width="207dp"
        android:layout_height="137dp"
        android:background="#813434"
        android:text="2"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/g1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_3"
        android:layout_width="137dp"
        android:layout_height="140dp"
        android:background="#54C5B0"
        android:text="3"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_1" />

    <TextView
        android:id="@+id/text_4"
        android:layout_width="137dp"
        android:layout_height="140dp"
        android:background="#260D0D"
        android:text="4"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/text_3"
        app:layout_constraintTop_toBottomOf="@id/text_1" />

    <TextView
        android:id="@+id/text_5"
        android:layout_width="137dp"
        android:layout_height="140dp"
        android:background="#EF7F7F"
        android:text="5"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/text_4"
        app:layout_constraintTop_toBottomOf="@id/text_1" />

    <TextView
        android:id="@+id/text_6"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#516561"
        android:text="6"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/text_4"
        app:layout_constraintTop_toBottomOf="@id/text_3" />

    <TextView
        android:id="@+id/text_7"
        android:layout_width="207dp"
        android:layout_height="140dp"
        android:background="#9DC8C0"
        android:text="7"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_6" />

    <TextView
        android:id="@+id/text_8"
        android:layout_width="207dp"
        android:layout_height="70dp"
        android:background="#531F1F"
        android:text="8"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/g1"
        app:layout_constraintTop_toBottomOf="@id/text_6" />

    <TextView
        android:id="@+id/text_9"
        android:layout_width="207dp"
        android:layout_height="70dp"
        android:background="#C4C4C4"
        android:text="9"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/g1"
        app:layout_constraintTop_toBottomOf="@id/text_8" />



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>
